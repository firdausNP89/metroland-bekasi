        <!--CONTENT-->
        <div class="hero-video">
            <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                <source src="/metroland/assets/video/sample-video.mp4" type="video/mp4">
            </video>
        </div>

        <div class="container-fluid" id="cluster">
            <div class="container my-2 py-5">
                <div class="cluster-title text-center img-fluid">
                    <img src="/metroland/assets/img/<%= data.image %>">
                    <p>
                        <%= JSDOM.fragment(data.content).textContent%>
                    </p>
                </div>
                <div>
                    <ul class="nav nav-pills mt-5 justify-content-between nav-justified" id="pills-tab" role="tablist">
                        <%let no=1; data.clusters.forEach(cluster=> {%>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link <%- no == 1 ?" active":""%>" id="pills-<%= cluster.id %>-tab"
                                        data-bs-toggle="pill"
                                        data-bs-target="#cluster_<%= cluster.id %>" type="button" role="tab"
                                            aria-controls="pills-<%= cluster.name %>"
                                                aria-selected="true"><%= cluster.name.toUpperCase() %></button>
                            </li>
                            <%no++});%>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <%let no_=1; data.clusters.forEach(cluster=> {%>
                            <div class="tab-pane fade show <%- no_ == 1?" active":""%>" id="cluster_<%= cluster.id %>"
                                    role="tabpanel"
                                    aria-labelledby="pills-<%= cluster.id %>-tab" tabindex="0">
                                        <div>
                                            <div class="card mx-auto mx-5 my-5">
                                                <div class="row g-0 d-flex align-items-center">
                                                    <div class="col-md-5">
                                                        <div class="card-body">
                                                            <h1 class="card-title">
                                                                <%= cluster.name.toUpperCase() %>
                                                            </h1>
                                                            <p class="card-text">
                                                                <%= cluster.description %>
                                                            </p>
                                                            <div class="cluster-spec table-responsive">
                                                                <table class="table mt-3 align-middle">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td><img src="/metroland/assets/icons/bedroom.png"
                                                                                    class="">
                                                                            </td>
                                                                            <td>Kamar Tidur</td>
                                                                            <td class="text-end">
                                                                                <%= cluster.total_badroom%>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><img src="/metroland/assets/icons/bathroom.png"
                                                                                    class="">
                                                                            </td>
                                                                            <td>Kamar Mandi</td>
                                                                            <td class="text-end">
                                                                                <%= cluster.total_bathroom%>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><img src="/metroland/assets/icons/garage.png"
                                                                                    class="">
                                                                            </td>
                                                                            <td>Garasi</td>
                                                                            <td class="text-end">
                                                                                <%= cluster.total_garage%>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><img src="/metroland/assets/icons/area.png"
                                                                                    class="">
                                                                            </td>
                                                                            <td>Luas Tanah</td>
                                                                            <td class="text-end">
                                                                                <%= cluster.area%>M<sup>2</sup>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><img src="/metroland/assets/icons/home.png"
                                                                                    class="">
                                                                            </td>
                                                                            <td>Luas Bangunan</td>
                                                                            <td class="text-end">
                                                                                <%= cluster.building_area%>M<sup>2</sup>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="spec-img col-md-7">
                                                        <div id="carouselExample" class="carousel carousel-dark slide">
                                                            <div class="carousel-inner">
                                                                <%let ciNo=1; cluster.ClusterImages.forEach(ci=>{%>
                                                                    <div class="carousel-item <%-ciNo == 1?" active":""
                                                                        %>">
                                                                        <img src="/metroland/assets/img/<%= ci.image %>"
                                                                            class="d-block w-100">
                                                                    </div>
                                                                    <%ciNo++})%>
                                                            </div>
                                                            <button class="carousel-control-prev" type="button"
                                                                data-bs-target="#carouselExample" data-bs-slide="prev">
                                                                <span
                                                                    class="carousel-control-prev-icon bg-dark rounded-2"
                                                                    aria-hidden="true"></span>
                                                                <span class="visually-hidden">Previous</span>
                                                            </button>
                                                            <button class="carousel-control-next" type="button"
                                                                data-bs-target="#carouselExample" data-bs-slide="next">
                                                                <span
                                                                    class="carousel-control-next-icon bg-dark rounded-2"
                                                                    aria-hidden="true"></span>
                                                                <span class="visually-hidden">Next</span>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                            </div>
                            <%no_++});%>
                    </div>
                </div>
            </div>
        </div>


